        <div class="boys">
            <h3>boys</h3>
            <div class="currentBoy">
                <h3>Current Boy</h3>
                <span class=name>Current</span>
                <button class="add"><i class="fas fa-plus"></i></button>
                <button class="minus"><i class="minus fas fa-minus"></i></button>
                <span class="points">0</span>
            </div>
            <div class="nextBoy">
                <h4>Next Boy</h4>
                <span class=name>Next</span>
